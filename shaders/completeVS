#version 400 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec2 aTex;
layout (location = 2) in vec3 aNormal;


out vec3 normal;
out vec2 texCoord;

uniform mat4 matrix;

void main()
{
   gl_Position = matrix * vec4(aPos, 1.0f); //  proj * view * model *
   normal = aNormal;
   texCoord = aTex;
}